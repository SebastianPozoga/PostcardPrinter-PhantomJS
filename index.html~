<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>PhantomJS Print - Client</title>
        <script src="js/tiny_mce/tiny_mce.js"></script>  
        <script src="js/jquery-min.js"></script>  
    </head>
    <style>
        form{
            width:90%;
            max-width:90%;
            margin:auto;
            display:block;
        }
        textarea{
            display:block;
            width:100%;
        }
        #view{
            display:block;
            margin:auto;
            background-color:#333;
            background-position:center;
            background-size: 100% 100%;
            margin:auto;
            width:450px;
            height:350px;
            padding:20px;
            -webkit-border-radius: 20px;
            -moz-border-radius: 20px;
            border-radius: 20px;
            overflow: hidden;
        }
        #view h1{
            color:#1b777a;
            text-shadow: 2px 2px #111;
        }
        #vContent{
            font-size: 21px;
            color:#fff;
            text-shadow: 3px 2px #111;
        }
    </style>
    <body>
        <script type="text/javascript">
            tinyMCE.init({
                mode : "textareas",
                theme : "simple",
                plugins : "autoresize",
                editor_selector : "mceSimple",
                onchange_callback : initContent

            });
            function initTitle(){
                $('#vTitle').html($('#title').val());	
            }
            function initContent(){
                if(tinyMCE.activeEditor){
                    var content = tinyMCE.activeEditor.getContent();
                    $('#vContent').html(content);
                }
            }
            function initPicture(){
                $('#view').css('background-image','url("photo/'+$('#picture').val()+'.jpg")');	
            }

            $(document).ready(function() {
                // Handler for .ready() called.
                initTitle();
                $('#title').change(function(){ initTitle(); });
                initContent();
                $('#content').change(function(){ initContent(); });
                initPicture();
                $('#picture').change(function(){ initPicture(); });
            });
        </script>

        <!-- Meet.js card form -->
        <div id="form">
            <h1>Meet.js Post Card</h1>
            <form id="printForm" method="POST" action="print.php">

                <input id="title" name="title" value="Title" />

                <select name="picture" id="picture">
                    <option value="1">Meet.js 1</option>
                    <option value="2">Meet.js 2</option>
                    <option value="3">Meet.js 3</option>
                    <option value="4">Meet.js 4</option>
                    <option value="5">Meet.js 5</option>
                    <option value="6">Meet.js 6</option>
                </select> 

                <textarea id="content" name="content" class="mceSimple">My card text</textarea>

                <input type="submit" value="Print" />
            </form>
        </div>

        <!-- Meet.js card view -->
        <div id="view">
            <h1 id="vTitle">Meet.js Post Card</h1>
            <div id="vContent">My card text</div>
        </div>



    </body>
</html>
